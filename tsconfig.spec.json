/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine"
    ],
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/app/core/*"],
			"@features/*": ["src/app/features/*"],
			"@assets/*": ["src/assets/*"],
			"@src/*": ["src/*"],
			"@app/*": ["src/app/*"],
			"@environments/*": ["src/environments/*"],
    },
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
